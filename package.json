{
  "name": "buygest",
  "version": "1.0.0",
  "description": "Aplicaci√≥n tpv",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "production": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "inst": "node_modules/.bin/electron-builder --linux",
    "deb:pack": "electron-packager . Buygest --platform linux --arch x64 --out dist/",
    "multi": "electron-builder -mwl",
    "linux": "electron-builder --linux",
    "debinst": "electron-installer-debian --src dist/Buygest-linux-x64/ --dest dist/installers/ --arch amd64"
  },
  "author": "dani",
  "license": "ISC",
  "build": {
    "appId": "com.buygest.app",
    "productName": "Buygest",
    "directory": {
      "output": "out"
    },
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "background": "images/buygest.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb"
      ],
      "icon": "images/buygest.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "images/icon.ico",
      "nsis": {
        "allowToChangeInstallationDirectory": true
      }
    }
  },
  "dependencies": {
    "electron": "^7.1.1",
    "electron-installer-debian": "^2.0.1",
    "electron-navigation": "^1.5.8",
    "electron-store": "^5.1.0",
    "jquery": "^3.4.1"
  },
  "devDependencies": {
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.1.0",
    "electron-reload": "^1.5.0"
  }
}
